{
  "env": {
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "1",
    "CLAUDE_CODE_MONITOR_GHOSTTY_ASKED": "1",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test)",
      "Bash(pnpm run lint)",
      "Bash(pnpm run test)",
      "mcp__sequential-thinking",
      "mcp__context7",
      "mcp__deepwiki",
      "mcp__plugin_claude-mem_mcp-search",
      "mcp__plugin_slack_slack__slack_read_channel",
      "mcp__plugin_slack_slack__slack_read_thread",
      "mcp__plugin_slack_slack__slack_read_canvas",
      "mcp__plugin_slack_slack__slack_read_user_profile",
      "mcp__plugin_slack_slack__slack_search_public",
      "mcp__plugin_slack_slack__slack_search_public_and_private",
      "mcp__plugin_slack_slack__slack_search_channels",
      "mcp__plugin_slack_slack__slack_search_users"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(rm -r:*)",
      "Bash(rm -f:*)",
      "Bash(rm -R:*)",
      "Bash(rm --recursive:*)",
      "Bash(rm --force:*)",
      "Bash(rmdir:*)",
      "Bash(git push -f:*)",
      "Bash(git push --force:*)",
      "Bash(chmod 777:*)",
      "Bash(chmod -R 777:*)",
      "Bash(chmod 666:*)",
      "Bash(chmod -R 666:*)",
      "Bash(chmod a+rwx:*)",
      "Read(*.env*)",
      "Read(*.env)",
      "Read(*.env.local)",
      "Read(*.env.development)",
      "Read(*.env.production)",
      "Read(*.env.staging)",
      "Read(*.env.test)",
      "Bash(cat:*.env*)",
      "Bash(less:*.env*)",
      "Bash(more:*.env*)",
      "Bash(head:*.env*)",
      "Bash(tail:*.env*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/hook_stop_words.sh"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Code has finished responding\" with title \"Claude Code\" sound name \"Glass\"'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Code needs your attention\" with title \"Claude Code\" sound name \"Glass\"'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.js"
  },
  "enabledPlugins": {
    "example-skills@anthropic-agent-skills": true,
    "document-skills@anthropic-agent-skills": true,
    "claude-mem@thedotmack": true,
    "slack@claude-plugins-official": true
  },
  "outputStyle": "Explanatory",
  "plansDirectory": "./.claude/plans",
  "notificationChannel": "auto",
  "teammateMode": "in-process",
  "terminalProgressBarEnabled": true
}
