{
	"permissions": {
		"allow": [
			"Bash(npm run lint)",
			"Bash(npm run test)",
			"Bash(pnpm run lint)",
			"Bash(pnpm run test)"
		],
		"deny": []
	},
	"hooks": {
		"Stop": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "$HOME/.claude/hooks/hook_stop_words.sh"
					}
				]
			}
		]
	},
	"env": {
		"DISABLE_TELEMETRY": 1
	}
}
