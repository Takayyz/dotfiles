{
	"permissions": {
		"allow": [
			"Bash(npm run lint)",
			"Bash(npm run test)",
			"Bash(pnpm run lint)",
			"Bash(pnpm run test)"
		],
		"deny": [
			"Bash(rm -rf /)",
			"Bash(rm -rf /*)",
			"Bash(rm -rf ~)",
			"Bash(rm -rf ~/*)",
			"Bash(rm -rf:*)",
			"Bash(rm -r:*)",
			"Bash(rm -R:*)",
			"Bash(rm --recursive:*)",
      "Bash(rm --force:*)",
			"Bash(rm:*)",
			"Bash(find * -delete:*)",
      "Bash(find * -exec rm:*)",
			"Bash(git push -f:*)",
			"Bash(git push --force:*)"
		]
	},
	"hooks": {
		"Stop": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "$HOME/.claude/hooks/hook_stop_words.sh"
					}
				]
			}
		]
	},
	"env": {
		"DISABLE_TELEMETRY": 1
	}
}
