{
	"permissions": {
		"allow": [
			"Bash(npm run lint)",
			"Bash(npm run test)",
			"Bash(pnpm run lint)",
			"Bash(pnpm run test)"
		],
		"deny": []
	},
	"stop": [
		{
			"matcher": "",
			"hooks": [
				{
